    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (InMemoryDatabaseCache.Cars == null)
            {
                await InMemoryDatabaseCache.GetCarsFromDatabaseAndCache();
                StateHasChanged();
            }


        }
    }

